@model IEnumerable<DistantLearning.Models.Test>

@{
    ViewData["Title"] = "Index";
}

<h1>Создание тестов</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TestName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubjectId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TestName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.SubjectName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TestId">Редактировать вопросы</a> |
                <a asp-action="Details" asp-route-id="@item.TestId">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.TestId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
